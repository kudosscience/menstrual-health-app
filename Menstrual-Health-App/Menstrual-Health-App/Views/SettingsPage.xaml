<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Menstrual_Health_App.ViewModels"
             x:Class="Menstrual_Health_App.Views.SettingsPage"
             x:DataType="viewmodels:SettingsViewModel"
             Title="Settings"
             BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <Label Text="Cycle Settings" 
                   FontSize="20" 
                   FontAttributes="Bold" />

            <Frame BackgroundColor="{AppThemeBinding Light=#F8F8F8, Dark=#2C2C2C}" 
                   CornerRadius="15" 
                   Padding="15">
                <VerticalStackLayout Spacing="15">
                    
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Last Period Start Date" FontSize="14" TextColor="Gray" />
                        <DatePicker Date="{Binding LastPeriodDate}"
                                    MinimumDate="{Binding MinimumDate}"
                                    MaximumDate="{Binding MaximumDate}"
                                    FontSize="16" />
                    </VerticalStackLayout>

                    <BoxView HeightRequest="1" Color="LightGray" />

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Average Cycle Length (days)" FontSize="14" TextColor="Gray" />
                        <HorizontalStackLayout Spacing="10">
                            <Stepper Minimum="21" Maximum="40" 
                                     Value="{Binding CycleLengthDays}" 
                                     Increment="1" />
                            <Label Text="{Binding CycleLengthDays, StringFormat='{0} days'}" 
                                   FontSize="16" 
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>

                    <BoxView HeightRequest="1" Color="LightGray" />

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Average Period Length (days)" FontSize="14" TextColor="Gray" />
                        <HorizontalStackLayout Spacing="10">
                            <Stepper Minimum="2" Maximum="10" 
                                     Value="{Binding PeriodLengthDays}" 
                                     Increment="1" />
                            <Label Text="{Binding PeriodLengthDays, StringFormat='{0} days'}" 
                                   FontSize="16" 
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </Frame>

            <Label Text="Notifications" 
                   FontSize="20" 
                   FontAttributes="Bold" />

            <Frame BackgroundColor="{AppThemeBinding Light=#F8F8F8, Dark=#2C2C2C}" 
                   CornerRadius="15" 
                   Padding="15">
                <VerticalStackLayout Spacing="15">

                    <Grid ColumnDefinitions="*,Auto">
                        <Label Text="Enable Phase Notifications" 
                               FontSize="16" 
                               VerticalOptions="Center" />
                        <Switch Grid.Column="1" 
                                IsToggled="{Binding NotificationsEnabled}" 
                                OnColor="#E91E63" />
                    </Grid>

                    <BoxView HeightRequest="1" Color="LightGray" IsVisible="{Binding NotificationsEnabled}" />

                    <VerticalStackLayout Spacing="5" IsVisible="{Binding NotificationsEnabled}">
                        <Label Text="Notification Time" FontSize="14" TextColor="Gray" />
                        <TimePicker Time="{Binding NotificationTime}" FontSize="16" />
                    </VerticalStackLayout>

                    <Button Text="Test Notification"
                            Command="{Binding TestNotificationCommand}"
                            BackgroundColor="#9C27B0"
                            TextColor="White"
                            CornerRadius="10"
                            IsVisible="{Binding NotificationsEnabled}" />

                </VerticalStackLayout>
            </Frame>

            <Button Text="Save Settings"
                    Command="{Binding SaveCommand}"
                    BackgroundColor="#E91E63"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    HeightRequest="50" />

            <Label Text="Data Management" 
                   FontSize="20" 
                   FontAttributes="Bold"
                   Margin="0,20,0,0" />

            <Frame BackgroundColor="{AppThemeBinding Light=#FFEBEE, Dark=#B71C1C}" 
                   CornerRadius="15" 
                   Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Reset all data and start fresh. This cannot be undone." 
                           FontSize="14" 
                           TextColor="Gray" />
                    <Button Text="Reset All Data"
                            Command="{Binding ResetDataCommand}"
                            BackgroundColor="#E74C3C"
                            TextColor="White"
                            CornerRadius="10" />
                </VerticalStackLayout>
            </Frame>

            <Label Text="About" 
                   FontSize="20" 
                   FontAttributes="Bold"
                   Margin="0,20,0,0" />

            <Frame BackgroundColor="{AppThemeBinding Light=#F8F8F8, Dark=#2C2C2C}" 
                   CornerRadius="15" 
                   Padding="15"
                   Margin="0,0,0,20">
                <VerticalStackLayout Spacing="5">
                    <Label Text="Menstrual Health App" FontSize="16" FontAttributes="Bold" />
                    <Label Text="Version 1.0" FontSize="14" TextColor="Gray" />
                    <Label Text="Track your cycle and get personalized health tips." 
                           FontSize="14" 
                           TextColor="Gray" 
                           Margin="0,10,0,0" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
