<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Menstrual_Health_App.ViewModels"
             x:Class="Menstrual_Health_App.Views.PhaseDetailPage"
             x:DataType="viewmodels:PhaseDetailViewModel"
             Title="{Binding Title}"
             BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            
            <Frame BackgroundColor="{Binding PhaseColor}" 
                   CornerRadius="20" 
                   Padding="20"
                   HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="{Binding Icon}" 
                           FontSize="64" 
                           HorizontalOptions="Center" />
                    <Label Text="{Binding Title}" 
                           FontSize="28" 
                           FontAttributes="Bold" 
                           TextColor="White"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Frame>

            <Frame BackgroundColor="{AppThemeBinding Light=#F8F8F8, Dark=#2C2C2C}" 
                   CornerRadius="15" 
                   Padding="15">
                <Label Text="{Binding Description}" 
                       FontSize="16" 
                       LineHeight="1.4" />
            </Frame>

            <Label Text="Common Symptoms" 
                   FontSize="20" 
                   FontAttributes="Bold" />
            <Frame BackgroundColor="{AppThemeBinding Light=#F8F8F8, Dark=#2C2C2C}" 
                   CornerRadius="15" 
                   Padding="15">
                <VerticalStackLayout BindableLayout.ItemsSource="{Binding Symptoms}" Spacing="8">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate x:DataType="x:String">
                            <HorizontalStackLayout Spacing="10">
                                <Label Text="*" FontSize="16" VerticalOptions="Start" />
                                <Label Text="{Binding}" FontSize="15" LineHeight="1.3" />
                            </HorizontalStackLayout>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </VerticalStackLayout>
            </Frame>

            <Label Text="Health Tips" 
                   FontSize="20" 
                   FontAttributes="Bold" />
            <Frame BackgroundColor="{AppThemeBinding Light=#E8F5E9, Dark=#1B5E20}" 
                   CornerRadius="15" 
                   Padding="15">
                <VerticalStackLayout BindableLayout.ItemsSource="{Binding HealthTips}" Spacing="8">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate x:DataType="x:String">
                            <HorizontalStackLayout Spacing="10">
                                <Label Text="+" FontSize="16" TextColor="#27AE60" VerticalOptions="Start" />
                                <Label Text="{Binding}" FontSize="15" LineHeight="1.3" />
                            </HorizontalStackLayout>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </VerticalStackLayout>
            </Frame>

            <Label Text="Nutrition Tips" 
                   FontSize="20" 
                   FontAttributes="Bold" />
            <Frame BackgroundColor="{AppThemeBinding Light=#FFF3E0, Dark=#E65100}" 
                   CornerRadius="15" 
                   Padding="15">
                <VerticalStackLayout BindableLayout.ItemsSource="{Binding NutritionTips}" Spacing="8">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate x:DataType="x:String">
                            <HorizontalStackLayout Spacing="10">
                                <Label Text="*" FontSize="14" VerticalOptions="Start" />
                                <Label Text="{Binding}" FontSize="15" LineHeight="1.3" />
                            </HorizontalStackLayout>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </VerticalStackLayout>
            </Frame>

            <Label Text="Exercise Tips" 
                   FontSize="20" 
                   FontAttributes="Bold" />
            <Frame BackgroundColor="{AppThemeBinding Light=#E3F2FD, Dark=#0D47A1}" 
                   CornerRadius="15" 
                   Padding="15">
                <VerticalStackLayout BindableLayout.ItemsSource="{Binding ExerciseTips}" Spacing="8">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate x:DataType="x:String">
                            <HorizontalStackLayout Spacing="10">
                                <Label Text="*" FontSize="14" VerticalOptions="Start" />
                                <Label Text="{Binding}" FontSize="15" LineHeight="1.3" />
                            </HorizontalStackLayout>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </VerticalStackLayout>
            </Frame>

            <Label Text="Self-Care Tips" 
                   FontSize="20" 
                   FontAttributes="Bold" />
            <Frame BackgroundColor="{AppThemeBinding Light=#F3E5F5, Dark=#6A1B9A}" 
                   CornerRadius="15" 
                   Padding="15"
                   Margin="0,0,0,20">
                <VerticalStackLayout BindableLayout.ItemsSource="{Binding SelfCareTips}" Spacing="8">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate x:DataType="x:String">
                            <HorizontalStackLayout Spacing="10">
                                <Label Text="*" FontSize="14" VerticalOptions="Start" />
                                <Label Text="{Binding}" FontSize="15" LineHeight="1.3" />
                            </HorizontalStackLayout>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
